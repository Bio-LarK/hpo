function hpo_synonym_uninstall() {
    $sql = 'SELECT nid FROM {node} n WHERE n.type = :type';
    $result = db_query($sql, array(':type' => 'hpo_synonym'));
    $nids = array();
    foreach ($result as $row) {
        $nids[] = $row->nid;
    }

    node_delete_multiple($nids);

    foreach (array_keys(_hpo_synonym_installed_fields()) as $field) {
        field_delete_field($field);
    }

    $instances = field_info_instances('node', 'hpo_synonym');
    foreach ($instances as $instance_name => $instance) {
        field_delete_instance($instance);
    }

    node_type_delete('hpo_synonym');

    field_purge_batch(1000);
}
